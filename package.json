{
  "name": "vue-vs-react-workshop",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "llm:all": "node combine-files.cjs --path .",
    "llm:react": "node combine-files.cjs --path ./packages/react-app",
    "llm:vue": "node combine-files.cjs --path ./packages/vue-app",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "dev:presentation": "pnpm --filter presentation dev",
    "start": "pnpm dev:presentation",
    "prepare": "husky",
    "commit": "cz"
  },
  "devDependencies": {
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "minimist": "^1.2.8",
    "prettier": "3.6.2",
    "turbo": "^2.6.0"
  },
  "lint-staged": {
    "packages/vue-app/src/**/*.{ts,vue}": [
      "pnpm -F vue-app lint",
      "pnpm -F vue-app format"
    ],
    "packages/react-app/src/**/*.{ts,tsx}": [
      "pnpm -F react-app lint",
      "pnpm -F react-app format"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
